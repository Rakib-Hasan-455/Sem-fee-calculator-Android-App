<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="263dp"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:text="How much credit you took?"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.695"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/textView2"
            android:layout_width="192dp"
            android:layout_height="43dp"
            android:fontFamily="sans-serif"
            android:text="You must answer in both credit and waiver% box"
            android:textColor="#FF0000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.566"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.014"/>

    <EditText
            android:id="@+id/etNum1"
            android:layout_width="53dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="#FF1B75"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0"
            tools:text="0"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="272dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:text="The waiver percent you got?"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.784"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNum1"
            app:layout_constraintVertical_bias="0.0"/>

    <EditText
            android:id="@+id/etNum2"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0"
            tools:text="0"/>

    <Button
            android:id="@+id/btnAdd"
            android:layout_width="123dp"
            android:layout_height="47dp"
            android:text="Calculate"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNum2"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="306dp"
            android:layout_height="23dp"
            android:text="Click calculate and look here Magic"
            android:textColor="#6706A3"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.989"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAnswer4"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:id="@+id/tvAnswer4"
                android:layout_width="286dp"
                android:layout_height="27dp"
                android:text="Your Fee details is shown below"
                android:textAllCaps="false"
                android:textColor="#090000"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.872"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAdd"
                app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:id="@+id/tvAnswer1"
                android:layout_width="308dp"
                android:layout_height="31dp"
                android:text="----------------------------------"
                android:textColor="#451353"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.979"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAnswer"
                app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:id="@+id/tvAnswer2"
                android:layout_width="308dp"
                android:layout_height="28dp"
                android:text="----------------------------------"
                android:textColor="#187035"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.989"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAnswer1"
                app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:id="@+id/tvAnswer3"
                android:layout_width="308dp"
                android:layout_height="30dp"
                android:text="----------------------------------"
                android:textColor="#228075"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAnswer2"
                app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:id="@+id/textView16"
                android:layout_width="22dp"
                android:layout_height="38dp"
                android:text="%"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btnAdd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/etNum2"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="1.0" />

        <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Input 0 if you got 0%"
                android:textColor="#FF0000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/etNum2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/etNum1"
                app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginBottom="16dp"
            android:text="Due of your last semester=="
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.374"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAnswer3"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
                android:id="@+id/etNum3"
                android:layout_width="89dp"
                android:layout_height="46dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="#331087"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.704"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAnswer3"
                app:layout_constraintVertical_bias="0.0" />

        <Button
                android:id="@+id/btnAdd1"
                android:layout_width="81dp"
                android:layout_height="42dp"
                android:text="Calculate"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.957"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAnswer3"
                app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>